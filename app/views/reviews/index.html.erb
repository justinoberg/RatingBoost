
<h1>Listing Reviews</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Rating</th>
      <th>Comment</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= review.comment %></td>
        <td><%= review.name %></td>
        <td><%= review.email %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path, class: "btn btn-link" %>
<a href="/businesses/1/reviews/new#logo" class: "btn btn-link">New Review</a>