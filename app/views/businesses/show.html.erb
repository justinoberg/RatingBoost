<div class="row">
	<div class="col-sm-4">
		<%= image_tag @business.image_url %>

		<h2>
 		 <%= @business.name %>
		</h2>

		<div class="star-rating" data-score= <%= @avg_rating %> ></div><br>
		<p><%= "#{@reviews.length} reviews" %></p>

		<p>
		  <strong>Address:</strong>
 		 <%= @business.address %>
		</p>

		<p>
		  <strong>Phone:</strong>
 		  <%= @business.phone %>
		</p>

		<p>
		  <strong>Website:</strong>
 		 <%= @business.website %>
		</p>

		<%= link_to "Write a Review", new_business_review_path(@business), class: "btn btn-primary" %>
		<br><%= link_to 'Edit', edit_business_path(@business), class: "btn btn-link" %> |
		<%= link_to 'Back', businesses_path, class: "btn btn-link" %>
	</div>

	<div class="col-sm-8">
	  <% if @reviews.blank? %>
	  	<h3>No reviews yet. Ask for some!</h3>
	  <% else %>
	  	<table class="table">
	  		<tbody>
	  			<% @reviews.each do |review| %>
	  				<tr>
	  					<td>
	  						<h3><%= review.name %></h3>
							<h4><%= review.email %></h4>
							<div class="star-rating" data-score= <%= review.rating %> ></div><br>
							<p><%= h(review.comment).gsub(/\n/, '<br/>').html_safe %></p>
						</td>
					</tr>
	  			<% end %>
	  		</tbody>
	  	</table>

	  <% end %>
	
	</div>
</div>

<script>
	$('.star-rating').raty({
		path:'https://s3-us-west-1.amazonaws.com/ratingboost/stars',
		readOnly: true,
		 score: function() {
   		 return $(this).attr('data-score');
  }
	});
</script>

